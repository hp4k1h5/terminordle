{
  "name": "@hp4k1h5/terminordle",
  "version": "0.1.13",
  "license": "MIT",
  "scripts": {
    "help": "yarn dev --help",
    "dev": "yarn build && node dist/src/cli/index.js",
    "play": "yarn dev play",
    "join": "yarn dev join",
    "serve": "yarn dev serve",
    "test": "mocha -r ts-node/register 'tests/**/*.*'",
    "build": "rm -rf dist/ && tsc && cp -r dist_data dist",
    "pub": "yarn build && npm publish --access public"
  },
  "bin": {
    "terminordle": "dist/src/cli/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HP4k1h5/terminordle.git"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "commander": "^9.3.0",
    "dotenv": "^16.0.1",
    "ws": "^8.7.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/chalk": "^2.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.39",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "chai": "^4.3.6",
    "eslint": "^8.17.0",
    "eslint-plugin-mocha": "^10.0.5",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "files": [
    "src/**/*",
    "dist/**/*.*"
